# ===========================================
# NEXTJS BLOG POCKETBASE - ENVIRONMENT VARIABLES
# ===========================================
# Copy this file to .env.local and fill in your actual values
# Never commit .env.local to version control!

# ===========================================
# POCKETBASE CONFIGURATION
# ===========================================
# PocketBase server URL (local development)
POCKETBASE_URL=http://127.0.0.1:8090

# PocketBase admin credentials (for development)
POCKETBASE_ADMIN_EMAIL=admin@example.com
POCKETBASE_ADMIN_PASSWORD=your_admin_password

# ===========================================
# SITE CONFIGURATION
# ===========================================
# Your website URL (change this to your actual domain)
NEXT_PUBLIC_SITE_URL=https://yourdomain.com

# Site name and branding
NEXT_PUBLIC_SITE_NAME=My Blog
NEXT_PUBLIC_SITE_TITLE=Technology & Development Articles
NEXT_PUBLIC_SITE_DESCRIPTION=A modern blog platform featuring technology articles, development tutorials, and insights about web development, design, and the creative process.

# ===========================================
# AUTHOR INFORMATION
# ===========================================
NEXT_PUBLIC_AUTHOR_NAME=My Blog Team
NEXT_PUBLIC_AUTHOR_EMAIL=hello@yourdomain.com
NEXT_PUBLIC_AUTHOR_TWITTER=@myblog

# ===========================================
# SOCIAL MEDIA & SEO
# ===========================================
# Twitter configuration
NEXT_PUBLIC_TWITTER_HANDLE=@myblog
NEXT_PUBLIC_TWITTER_CARD_TYPE=summary_large_image

# Open Graph image (relative to public folder)
NEXT_PUBLIC_OG_IMAGE=/og-image.jpg

# ===========================================
# CONTACT INFORMATION
# ===========================================
NEXT_PUBLIC_CONTACT_EMAIL=hello@yourdomain.com
NEXT_PUBLIC_CONTACT_PHONE=+1 (555) 123-4567
NEXT_PUBLIC_CONTACT_STREET=123 Blog Street
NEXT_PUBLIC_CONTACT_CITY=Tech City
NEXT_PUBLIC_CONTACT_STATE=TC
NEXT_PUBLIC_CONTACT_ZIP=12345

# ===========================================
# ANALYTICS & VERIFICATION
# ===========================================
# Google Analytics (optional)
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=

# Google Search Console verification (optional)
NEXT_PUBLIC_GOOGLE_SEARCH_CONSOLE=

# Yandex verification (optional)
NEXT_PUBLIC_YANDEX_VERIFICATION=

# ===========================================
# BLOG SETTINGS
# ===========================================
NEXT_PUBLIC_POSTS_PER_PAGE=6
NEXT_PUBLIC_FEATURED_POSTS_COUNT=3
NEXT_PUBLIC_EXCERPT_LENGTH=160

# ===========================================
# THEME SETTINGS
# ===========================================
NEXT_PUBLIC_DEFAULT_THEME=system
NEXT_PUBLIC_ENABLE_SYSTEM_THEME=true

# ===========================================
# DEVELOPMENT SETTINGS
# ===========================================
# Set to 'development' for local development
NODE_ENV=development

# ===========================================
# PRODUCTION SETTINGS
# ===========================================
# Uncomment and configure for production deployment
# POCKETBASE_URL=https://your-pocketbase-instance.com
# NEXT_PUBLIC_SITE_URL=https://yourdomain.com
# NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
# NEXT_PUBLIC_GOOGLE_SEARCH_CONSOLE=your_verification_code
